server:
  port: 8080
  
spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: api-customer
          uri: lb://api-customer
          predicates:
            - Path=/api/v1/customer/**
        - id: api-provider
          uri: lb://api-provider
          predicates:
            - Path=/api/v1/provider/**
            
eureka:
  instance:
    hostname: localhost
    instance-id: ${spring.application.name}:${spring.application.instance_id:${random.value}}
  client:
    registerWithEureka: false
    fetchRegistry: true
    serviceUrl:
      defaultZone: http://localhost:8761/eureka/
     
management:
  info:
    env:
      enabled: true
  endpoints:
    web:
      exposure:
        include: health, info
